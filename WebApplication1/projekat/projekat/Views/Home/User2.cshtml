@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}
@Styles.Render("~/Styles/Index.css")

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="Index">
        <img src="bird.jpg" alt="logo" style="width:40px;">
    </a>

    <!-- Links -->
    <ul class="navbar-nav">

        <li class="nav-item">
            @Html.ActionLink("Prikaz podataka", "IndexUser2", "ListaSkolas", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Izloguj se", "Logout", "Home", new { @class = "nav-link" })
        </li>
    </ul>
</nav>

<h5 class="bg-dark col-lg-8" style="color:white;padding:5px">Korisnik sa pravom unosa: @Session["UserName"]</h5>
